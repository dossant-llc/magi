# BrainCloud Environment Variables
# Copy this to .env for local development
# For production deployment, use cloud/projects/agiforme/environments/production/.env

# Basic Configuration
NODE_ENV=development
PORT=8082
DOMAIN=localhost

# Service Features
BRAINXCHANGE_ENABLED=true
BRAIN_PROXY_ENABLED=true

# WebSocket Configuration
BRAINXCHANGE_WS=ws://localhost:8082/bx
BRAIN_PROXY_WS=ws://localhost:8082/bp/connect
BRAIN_PROXY_API=http://localhost:8082/bp

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/braincloud.log

# CORS (for development)
CORS_ORIGIN=http://localhost:3000