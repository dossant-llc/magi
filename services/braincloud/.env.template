# BrainCloud Server Configuration Template
# Copy this file to .env and customize for your deployment

# Basic Configuration
NODE_ENV=development
PORT=8082

# Domain Configuration
# For local development: localhost
# For production: your-domain.com
DOMAIN=localhost
BRAINCLOUD_DOMAIN=your-domain.com
BRAINCLOUD_PROTOCOL=https

# Service Features
BRAINXCHANGE_ENABLED=true
BRAIN_PROXY_ENABLED=true

# WebSocket Configuration
# Local development URLs
BRAINXCHANGE_WS=ws://localhost:8082/bx
BRAIN_PROXY_WS=ws://localhost:8082/bp/connect
BRAIN_PROXY_API=http://localhost:8082/bp

# Production WebSocket Configuration
BRAINXCHANGE_PROTOCOL=wss
BRAINXCHANGE_PATH=/bx
BRAIN_PROXY_PROTOCOL=wss
BRAIN_PROXY_PATH=/bp/connect
BRAIN_PROXY_HTTP_PATH=/bp

# API Configuration
API_PATH=/api
HEALTH_PATH=/bp/health

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/braincloud.log

# CORS (for development)
CORS_ORIGIN=http://localhost:3000

# Static Assets
LOGO_PATH=/logo.png
FAVICON_PATH=/favicon.ico
LEGAL_PATH=/legal
PRIVACY_PATH=/privacy