# BrainBridge Environment Variables
# Copy this to .env for local development
# For production deployment, use cloud/projects/agiforme/environments/production/.env

# Basic Configuration
NODE_ENV=development
PORT=8147

# Memory Storage
MEMORIES_DIR=../memories

# Ollama Configuration
OLLAMA_HOST=127.0.0.1
OLLAMA_PORT=11434
OLLAMA_MODEL_CHAT=llama3.1:8b
OLLAMA_MODEL_EMBED=mxbai-embed-large

# MCP Configuration
MCP_TRANSPORT=stdio

# Brain Proxy (optional for local development)
BRAIN_PROXY_ENABLED=false
BRAIN_PROXY_URL=ws://localhost:9025/bp/connect
BRAIN_PROXY_ROUTE=local-dev
BRAIN_PROXY_SECRET=local-dev-secret

# BrainXchange (optional for local development)
BRAINXCHANGE_ENABLED=true
BRAINXCHANGE_SERVER=ws://localhost:9025/bx

# Logging
LOG_LEVEL=debug
TRACE_MODE=false
LOG_FILE=./logs/brainbridge-mcp.log

# Performance
EMBEDDING_CACHE_SIZE=1000
SEARCH_DEFAULT_LIMIT=5