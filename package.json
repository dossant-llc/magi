{
  "name": "magi",
  "version": "0.1.2",
  "description": "magi - Your Personal AI That Remembers What Matters to You. Transform scattered lessons learned into an AI-accessible, privacy-aware memory bank.",
  "private": true,
  "bin": {
    "magi": "./bin/magi"
  },
  "workspaces": [
    "services/brainbridge",
    "brainkeeper",
    "services/brainhub/brainhub-local"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=services/brainbridge",
    "dev:ui": "npm run dev --workspace=brainkeeper",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:ui\"",
    "build": "npm run build --workspaces",
    "install:all": "npm install --workspaces",
    "start": "bash dev/scripts/start.sh",
    "start:ui": "bash dev/scripts/start.sh --with-ui",
    "help": "node dev/scripts/help.js",
    "kill": "bash dev/scripts/kill-all.sh",
    "test:chatgpt": "node dev/scripts/test-chatgpt-integration.js",
    "test:register": "node tests/test-magi-register.js",
    "quick": "npm run bb:stdio",
    "magi": "node dev/scripts/auto-setup.js && npm run bb:cli",
    "magi:mcp": "node dev/scripts/magi-mcp-bridge.js",
    "setup:mcp": "node dev/scripts/setup-mcp.js",
    "install:global": "node dev/scripts/install-global.js",
    "setup": "bash dev/scripts/setup.sh",
    "bootstrap": "node dev/scripts/enhanced-bootstrap.js",
    "bootstrap:simple": "npm install && npm run install:all && npm run setup && npm run ai:pull",
    "bb:stdio": "npm run dev:stdio --workspace=services/brainbridge",
    "bb:logs": "node dev/scripts/format-logs.js",
    "bb:logs:clear": "npm run logs:clear --workspace=services/brainbridge",
    "bb:trace": "npm run trace --workspace=services/brainbridge",
    "bb:trace:logs": "npm run trace:logs --workspace=services/brainbridge",
    "bb:cli": "node dev/scripts/chat-simple.js",
    "mb:start": "npm run start --workspace=services/brainhub/brainhub-local",
    "mb:dashboard": "npm run dashboard --workspace=services/brainhub/brainhub-local",
    "mb:logs": "npm run logs --workspace=services/brainhub/brainhub-local",
    "mb:stop": "npm run stop --workspace=services/brainhub/brainhub-local",
    "mb:clean": "npm run clean --workspace=services/brainhub/brainhub-local",
    "bx:status": "echo 'BrainXchange status - TODO: implement'",
    "bx:invite": "echo 'Create BrainXchange invite - TODO: implement'",
    "bx:connect": "echo 'Connect to BrainXchange peer - TODO: implement'",
    "bx:peers": "echo 'List BrainXchange peers - TODO: implement'",
    "ai:status": "node -e \"const {execSync} = require('child_process'); try { const res = execSync('curl -s http://localhost:11434/api/tags', {encoding:'utf8'}); const models = JSON.parse(res).models; console.log('ðŸ¤– Ollama Status: \\\\x1b[32mRunning\\\\x1b[0m'); console.log('ðŸ“¦ Models available:', models.length); models.forEach(m => console.log('  -', m.name.padEnd(25), (m.size/1e9).toFixed(1) + 'GB')); } catch(e) { console.log('ðŸ¤– Ollama Status: \\\\x1b[31mNot running\\\\x1b[0m'); console.log('ðŸ’¡ Start with: ollama serve'); }\"",
    "ai:pull": "ollama pull llama3.1:8b && ollama pull mxbai-embed-large",
    "ai:models": "ollama list",
    "mem:path": "node dev/scripts/memories-path.js",
    "mem:backup": "echo 'Backup memories - TODO: implement'",
    "mem:stats": "node dev/scripts/mem-stats.js",
    "mem:clean": "echo 'Clean memories - TODO: implement'",
    "diag": "node dev/scripts/diagnostics.js",
    "fix-paths": "node dev/scripts/fix-paths.js",
    "sys:check": "npm run diag",
    "sys:ports": "lsof -i :8147,8148,8149,3000,3001,11434 2>/dev/null || echo 'No processes found on expected ports'",
    "sys:reset": "npm run fix-paths && npm run magic index",
    "qc": "npm run qc --workspace=services/brainbridge",
    "magic": "npm run magic --workspace=services/brainbridge",
    "perf:search": "npm run perf:search --workspace=services/brainbridge",
    "perf:baseline": "npm run perf:baseline --workspace=services/brainbridge", 
    "perf:compare": "npm run perf:compare --workspace=services/brainbridge",
    "test:mcp": "node dev/scripts/test-mcp.js",
    "test:chat": "node dev/scripts/chat-working.js",
    "test:integration": "node services/brainbridge/tests/integration/test-openai-e2e.js",
    "test:integration:all": "for file in services/brainbridge/tests/integration/test-*.js; do echo \"Running $file...\"; node \"$file\"; done",
    "test:color-search": "node services/brainbridge/tests/integration/test-color-search.js",
    "test": "npm run test --workspaces --if-present"
  },
  "keywords": [
    "magi",
    "personal-ai",
    "memory-bank",
    "privacy",
    "mcp",
    "knowledge-base",
    "ai-assistant",
    "claude",
    "wake-word"
  ],
  "author": "",
  "license": "SEE LICENSE FILE",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "tsx": "^4.19.2",
    "ws": "^8.18.3"
  }
}
