{
  "name": "agiforme-brainbridge",
  "version": "1.0.0",
  "description": "BrainBridge - AGIfor.me MCP server that connects your memories to AI assistants with smart privacy controls",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx --watch src/server.ts",
    "dev:stdio": "tsx --watch src/server.ts stdio",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:stdio": "node dist/server.js stdio",
    "test": "jest",
    "test:watch": "jest --watch",
    "magic": "tsx src/magic/index.ts",
    "magic:test": "tsx tests/magic/integration.test.ts",
    "logs": "tail -f logs/brainbridge-mcp.log",
    "logs:clear": "echo '' > logs/brainbridge-mcp.log && echo 'Logs cleared'",
    "trace": "TRACE_MODE=true npm run dev:stdio",
    "trace:logs": "tail -f logs/brainbridge-mcp.log | grep -E '\\[TRACE\\]|\\[PERF\\]|Timer'",
    "qc": "tsx src/scripts/quality-check.ts"
  },
  "keywords": [
    "mcp",
    "ai",
    "knowledge-base",
    "privacy",
    "model-context-protocol"
  ],
  "author": "",
  "license": "SEE LICENSE FILE",
  "type": "commonjs",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/node": "^24.3.0",
    "axios": "^1.11.0",
    "commander": "^14.0.0",
    "express": "^4.18.2",
    "faiss-node": "^0.5.1",
    "glob": "^7.2.3",
    "ollama": "^0.5.17",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2"
  }
}
